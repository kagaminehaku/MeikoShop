@model IEnumerable<MeikoShop.Models.Chatlieu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý chất liệu</h2>

<p>
    @Html.ActionLink("Thêm mới chất liệu", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã chất liệu
        </th>
        <th>
            Tên chất liệu
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Machatlieu)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Tenchatlieu)
    </td>
    <td>
        <button class="btn btn-success">
            @Html.ActionLink("Sửa", "Edit", new { id = item.Machatlieu}, new { @style = "color:white;" })
        </button>
        <button class="btn btn-primary">
            @Html.ActionLink("Chi tiết", "Details", new { id = item.Machatlieu }, new { @style = "color:white;" })
        </button>
        <button class="btn btn-danger">
            @Html.ActionLink("Xóa", "Delete", new { id = item.Machatlieu }, new { @style = "color:white;" })
        </button>
    </td>
</tr>
}

</table>
